extends layout

block content
    ol.breadcrumb
        li
            a(href="/") Home
        li.active News
        li.active= title

    article
        h1= title
        div.clearfix
            each label in labels
                div.pull-left
                    span.label.label-info=label
                    | &nbsp;
            div.pull-right
                span(title=date)= prettyDate
        div!= md(content)